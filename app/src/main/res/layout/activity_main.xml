<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee5de"
    android:paddingTop="2sp"
    android:paddingBottom="8dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/input0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:paddingTop="8dp"
        android:text="Log into"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/input1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="your account"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input0"
        app:layout_constraintTop_toBottomOf="@+id/input0"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/img0"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input1"
        app:layout_constraintTop_toBottomOf="@+id/input1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/user1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Email"
        android:textColor="#1B1A1A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/img0"
        app:layout_constraintEnd_toEndOf="@+id/img0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img0"
        app:layout_constraintTop_toTopOf="@+id/img0"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/user3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="jack.taylor@gmail.com"
        android:textColor="#1C1A1A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img0"
        app:layout_constraintEnd_toEndOf="@+id/img0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/user1"
        app:layout_constraintTop_toBottomOf="@+id/user1"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="1dp"
        android:paddingBottom="3dp"
        android:text="Wrong email"
        android:textColor="#DA3C3C"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/img0"
        app:layout_constraintEnd_toEndOf="@+id/user3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/user3"
        app:layout_constraintTop_toBottomOf="@+id/user3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/user5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:text="Password"
        android:textColor="#1B1A1A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/img0"
        app:layout_constraintEnd_toEndOf="@+id/edit1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit1"
        app:layout_constraintTop_toBottomOf="@+id/edit1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/user7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingBottom="3dp"
        android:text="********"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img0"
        app:layout_constraintEnd_toEndOf="@+id/img0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/user5"
        app:layout_constraintTop_toBottomOf="@+id/user5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/user8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Forgot?"
        android:textColor="#1B1A1A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/img0"
        app:layout_constraintEnd_toEndOf="@+id/img0"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/user7"
        app:layout_constraintTop_toBottomOf="@+id/user5" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_log_fb"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img0"
        app:layout_constraintStart_toStartOf="@+id/img0"
        app:layout_constraintTop_toBottomOf="@+id/img0"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/user9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Or sign up with social account"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn1"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnfacebook"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_log_fb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/user9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/user9"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/facebook" />

    <ImageButton
        android:id="@+id/btntwitter"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_twtr"
        app:layout_constraintBottom_toBottomOf="@+id/btnfacebook"
        app:layout_constraintEnd_toEndOf="@+id/btn1"
        app:layout_constraintStart_toEndOf="@+id/btnfacebook"
        app:layout_constraintTop_toTopOf="@+id/btnfacebook"
        app:srcCompat="@drawable/twitter" />

</androidx.constraintlayout.widget.ConstraintLayout>